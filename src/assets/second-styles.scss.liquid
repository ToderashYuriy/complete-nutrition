/*ABOUT TOP*/

.about-top{
	background-repeat: no-repeat;
	background-size: cover;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	align-items: center;
	height: 100%;
}

.bg-top{
	height: 500px;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.text-top{
	width: 500px;
	max-width: 100%;

	h1{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 50px;
		line-height: 50px;
		color: #fff;
		text-transform: none;
	}
}

/*SECOND BLOCK*/

.second-block{
	p{
		text-align: center;
		padding-left: 80px;
		padding-right: 80px;
		padding-top: 35px;
		font-size: 15px;
		line-height: 30px;
		margin-bottom: 100px;
	}
}

.info{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	-moz-flex-wrap: wrap;
	-ms-flex-wrap: wrap;
	-o-flex-wrap: wrap;
	flex-wrap: wrap;
	background-color: #F7F5F3;
	-ms-align-items: center;
	align-items: center;
}

.box-img{
	flex-basis: 50%;
	margin-top: -150px;

	img{
  		height: 678px;
  		object-fit: cover;
	}
}

.box-description{
	flex-basis: 30%;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-webkit-flex-direction: column;
	-moz-flex-direction: column;
	-ms-flex-direction: column;
	-o-flex-direction: column;
	flex-direction: column;
	justify-content: center;
	
	p{
		text-align: left;
		margin: 0;
		padding: 0;
	}

	h2{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 24px;
		text-align: left;
		text-transform: none;
		letter-spacing: 0;
	}
}

/*ABOUT ADVANTAGES */

.about-advantages-first,.about-advantages-second,.about-advantages-third{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	align-items: center
}

.chess{
	flex-basis: 50%;
}

.first-benefit,.second-benefit, .third-benefit{
	padding-left: 125px;
	padding-right: 125px;
	-ms-align-items: center;
	align-items: center;

	h2{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 24px;
		text-transform: none;
		letter-spacing: 0;
	}

	p{
		font-size: 15px;
	}
}

.first-benefit-img,.second-benefit-img,.third-benefit-img{
	-webkit-background-size: cover;
	background-size: cover;
	height: 500px;
}

/*VALUE*/

.values{
	background-color: #F7F5F3;
	text-align: center;
	padding-bottom: 75px;

	h1{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 32px;
		text-transform: none;
		padding-top: 60px;
		padding-bottom: 50px;
	}
}

.value-collection{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: space-between;
	padding-left: 40px;
	padding-right: 40px;

	h2{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 18px;
		text-transform: none;
		padding-top: 25px;
	}

	p{
		font-family: 'Open Sans', sans-serif;
		font-weight: 400;
		font-size: 15px;
	}
}

.value-description{
	flex-basis: 30%;
}

/*CONTACT*/

.contact{
	background: #F2EFEC;
	text-align: center;
	padding-bottom: 60px;
	padding-top: 60px;

	h1{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 32px;
		text-transform: none;
		letter-spacing: 0;
	}

	p{
		font-family: 'Lato', sans-serif;
		font-weight: 400;
		font-size: 18px;
	}
}

.shop-now-info{
	h1{
		padding-bottom: 0;
	}
	p{
		padding-top: 0;
	}
}

.shop-now-link{
	h2{
		text-align: center;
		color: #fff;
		font-size: 18px;
		width: 180px;
		letter-spacing: 0;
		padding-top: 15px;
	}
}

.btn-shop{
	background-color: #E65525;
	border: 1px solid #E65525;

	&:focus{
		outline: none;
	}
}

.btn-shop:hover {
    background-color: #fff;
}

.shop-now-link .btn-shop:hover h2 {
    color: #E65525;
}




/*HOME PAGE ------------------------------->*/

/*TOP SECTION*/

.home-top{
	background-repeat: no-repeat;
	background-size: cover;
	height: 600px;
	-ms-align-items: center;
	align-items: center;
}

.header-home-top{
	width: 700px;
	padding-top: 135px;
	margin-left: 10%;

	h1{
		color: #fff;
		font-size: 60px;
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		text-transform: none;
		
	}
}

.text-home-top{
	margin-left: 10%;
	p{
		font-size: 18px;
		font-family: 'Lato', sans-serif;
		font-weight: 400;
		color: #fff;
	}
	select{
		width: 60%;
	}
}

.link-home-top{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-webkit-flex-direction: row;
	-moz-flex-direction: row;
	-ms-flex-direction: row;
	-o-flex-direction: row;
	flex-direction: row;

	span{
		color: #fff;
		text-decoration: underline;
	}

}


/*STORY SECTION*/

.home-story{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
}

.story-bg-img{
	flex-basis: 50%;
	height: 540px;
	-webkit-background-size: cover;
	background-size: cover;
	background-repeat: no-repeat;
}

.story-description{
	flex-basis: 50%;
	background-color: #F7F7F7;
	-ms-align-items: center;
	align-items: center;
	height: 540px;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: flex-start;
}

.inner-story-description{
	max-width: 100%;
	padding-left: 120px;
	padding-right: 120px;

	h1{
		font-size: 24px;
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		text-transform: none;
		letter-spacing: 1px;
	}
	p{
		font-size: 15px;
		font-family: 'Open Sans', sans-serif;
		font-weight: 400;	}
}

.btn-story{
	width: 180px;
	height: 45px;

	h2{
		text-align: center;
		color: #fff;
		font-size: 18px;
		letter-spacing: 0;
		padding-top: 6px;
	}
}

.btn-story{
	background-color: #E65525;
	border: 1px solid #E65525;

	&:focus{
		outline: none;
	}
}

.btn-story:hover {
	background-color: #fff;

	h2 {
		color: #E65525;
	}
}


