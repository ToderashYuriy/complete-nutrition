/*ABOUT TOP*/

.about-top{
	background-repeat: no-repeat;
	background-size: cover;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	align-items: center;
	height: 100%;
}

.bg-top{
	height: 500px;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.text-top{
	width: 500px;
	max-width: 100%;

	h1{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 50px;
		line-height: 50px;
		color: #fff;
		text-transform: none;
	}
}

/*SECOND BLOCK*/

.second-block{
	p{
		text-align: center;
		padding: 25px;
		font-size: 15px;
		line-height: 30px;
		margin-bottom: 170px;
	}
}

.info{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	-moz-flex-wrap: wrap;
	-ms-flex-wrap: wrap;
	-o-flex-wrap: wrap;
	flex-wrap: wrap;
	background-color: #F7F5F3;
}

.box-img{
	flex-basis: 60%;
	margin-top: -130px;

	img{
		position: absolute;	
  		height: 678px;
		width: 663px;
		object-fit: cover;
	}
}

.box-description{
	flex-basis: 30%;
	padding-top: 128px;
	padding-bottom: 148px;
	
	p{
		text-align: left;
		margin: 0;
		padding: 0;
	}

	h2{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 24px;
		text-align: left;
		text-transform: none;
		letter-spacing: 0;
	}
}

/*ABOUT ADVANTAGES */

.about-advantages-first,.about-advantages-second,.about-advantages-third{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
}

.chess{
	flex-basis: 50%;
}

.first-benefit,.second-benefit, .third-benefit{
	padding: 125px;

	h2{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 24px;
		text-transform: none;
		letter-spacing: 0;
	}

	p{
		font-size: 15px;
	}
}

/*VALUE*/

.values{
	background-color: #F7F5F3;
	text-align: center;
	padding-bottom: 75px;

	h1{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 32px;
		text-transform: none;
		padding-top: 70px;
	}
}

.value-collection{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	justify-content: center;

	h2{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 18px;
		text-transform: none;
		padding-top: 25px;
	}

	p{
		font-family: 'Open Sans', sans-serif;
		font-weight: 400;
		font-size: 15px;
	}
}

.value-description{
	flex-basis: 30%;
}

/*CONTACT*/

.contact{
	background: #F2EFEC;
	text-align: center;
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	padding-top: 40px;
	padding-bottom: 40px;
	justify-content: center;

	h1{
		font-family: 'Lato', sans-serif;
		font-weight: 900;
		font-size: 32px;
		text-transform: none;
	}

	p{
		font-family: 'Lato', sans-serif;
		font-weight: 400;
		font-size: 18px;
	}
}

.shop-now-link{
	width: 200px;
	height: 50px;
	background-color: #E65525;
	justify-content: center;
	margin-left: 41%;

	h2{
		color: #fff;
		font-size: 18px;
		padding-top: 10px;
	}
}










@media screen and (max-width: 991px){

	/*SECOND BLOCK*/

	.box-img{
		margin-left: -90px;
		margin-top: -70px;
		height: 545px;
		width: 600px;
	}
}

@media screen and (max-width: 900px){

	/*SECOND BLOCK*/

	.box-img{
		flex-basis: 100%;
		
		img{
			margin-left: 200px;	
		}
	}
	.box-description{
		flex-basis: 100%;
		justify-content: center;
		padding-top: 200px;
		padding-bottom: 80px;
	}
}


@media screen and (max-width: 767px){

	/*ABOUT TOP*/

	.bg-top{
		height: 289px;
		display: -webkit-flex;
		display: -moz-flex;
		display: -ms-flex;
		display: -o-flex;
		display: flex;
	    justify-content: flex-start;
	    align-items: center;
	}
	.text-top{
		width: 500px;
		max-width: 100%;

		h1{
			font-size: 36px;
			line-height: 36px;
		}
	}

	/*ABOUT SECOND*/

	.box-img{

		img{
			margin-left: 110px;	
		}
	}

	/*ABOUT ADVANTAGES */

	.about-advantages-first,.about-advantages-second,.about-advantages-third{
		display: -webkit-flex;
		display: -moz-flex;
		display: -ms-flex;
		display: -o-flex;
		display: flex;
		flex-direction: column;
		-webkit-flex-direction: column;
		-moz-flex-direction: column;
		-ms-flex-direction: column;
		-o-flex-direction: column;
	}

	.second-benefit-img{
		order: 2;
	}

	.first-benefit,.second-benefit, .third-benefit{
		justify-content: center;
		padding: 20px;
	}

	.first-benefit-img,.second-benefit-img, .third-benefit-img{
		justify-content: center;
	}

	.value-collection{
		-webkit-flex-direction: column;
		-moz-flex-direction: column;
		-ms-flex-direction: column;
		-o-flex-direction: column;
		flex-direction: column;
		justify-content: center;
	}
}

@media screen and (max-width: 576px){
	
	/*ABOUT SECOND*/
	
	.box-img{

		img{
			transform: scale(0.7);
			margin-top: -100px;	
		}
	}
	.box-description{
		padding-top: 0px;
		padding-bottom: 40px;
	}
}



