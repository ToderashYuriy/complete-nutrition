// FAQs Page

section.faq-background-image {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-size: cover;
  height: 285px;
}
.faq-top {
  .faq-title {
    font-size: 50px;
    line-height: 50px;
    width: 45%;
    color: #fff;
    @include LatoBlack;
    text-transform: initial;
  }
}
.faq-content-wrapper {
  max-width: 100%;
  display: flex;
  justify-content: space-between;
  width: 1080px;
  margin: 0 auto;

  .faq-main-aside, .faq-main {
    margin-top: 80px;
  }
  .faq-main-aside {
    display: flex;
    flex-direction: column;
    width: 15%;
  }
  .faq-main {
    width: 80%;
  }
}
.faq-main-aside {
  .faq-link {
    @include LatoRegular;
    position: relative;
    width: max-content;
    max-width: 100%;
    line-height: 40px;
  }
  .faq-link.current {
    @include LatoBlack;
  }
  .faq-link.current:after {
    content: '';
    position: absolute;
    height: 2px;
    background-color: #ffd161;
    left: 0px;
    right: 0px;
    bottom: 0;
  }
}
.faq-main-wrapper {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 0 auto;

  .faq__search {
    margin: 0;
  }
  i.icon.icon--search {
    border-top: 1px solid #BEBEBE;
    border-left: 1px solid #BEBEBE;
    border-right: none;
    border-bottom: 1px solid #BEBEBE;
    transform: scale(-1, 1);
  }
  input.faq__search-input {
    border: 1px solid #BEBEBE;
  }
  .faq__search-input {
    @include LatoRegular;
    font-size: 18px;
    line-height: 22px;
    color: #332B29;
  }
  .section__title.faq__category__title {
    margin-bottom: 60px;
  }
  h4.section__title-text.faq__category__title-text::after {
    display: none;
  }
  h4.section__title-text.faq__category__title-text {
    @include LatoBlack;
    font-size: 24px;
    line-height: 29px;
    text-transform: initial;
  }
  .faq__accordion__title-text {
    margin: 10px;
  }
  .faq__accordion__title-icon {
    color: #413E3E;
  }
  .faq__accordion__title {
    // padding-bottom: 1px;
  }
  .faq__accordion__item .js-accordion-info {
  }
  div.article-wrapper {
    border-bottom: 1px solid #E6E6E6;
  }
  p.faq__accordion__title-text {
    @include LatoBlack;
    font-size: 18px;
    line-height: 42px;
  }
  .rte p:last-child {
    margin-bottom: 25px;
  }
  .faq__accordion__title-text {
    margin-left: 0;
  }
}
div.faq-galerry-wrapper {
    display: flex;
    width: 100%;
    margin: 0 auto;
    margin-top: 60px;
    min-height: 421px;

  .left-image, .right-image {
    width: 50%;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .left-image {
    margin: 15px 7px 15px 15px;
  }
  .right-image {
    margin: 15px 15px 15px 7px;
  }
  .left-image, .right-image {
    width: 100%;
    height: auto;
  }
