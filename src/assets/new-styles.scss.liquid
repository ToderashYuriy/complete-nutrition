@mixin LatoBlack {
  font-family: Lato;
  font-weight: 900;
}
@mixin LatoRegular {
  font-family: Lato;
  font-weight: 400;
}
.contact-content-wrapper {
  max-width: 100%;
  display: flex;
  flex-direction: column;
  width: 1080px;
  margin: 0 auto;
}
.top-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 285px;
}
h1.title, p.title-p {
  color: #fff;
  text-transform: none;
  margin: 0;
  padding: 0;
}
h1.title {
  font-size: 42px;
  text-align: left;
  @include LatoBlack;
}
p.title-p {
  font-size: 18px;
  text-align: left;
  @include LatoRegular;
}
.contact-main-content {
  display: flex;
  max-width: 100%;
  justify-content: space-between;
}
.form {
  display: flex;
  width: 60%;
}
.aside {
  display: flex;
  flex-direction: column;
  width: 30%;
  word-wrap: break-word;
}
.form, .aside {
  margin: 70px 0;
}
.form {
  display: flex;
  flex-direction: column;
}
.form-title, .aside-title, .aside-address-title {
  @include LatoBlack;
  font-size: 22px;
  text-transform: none;
}
.aside-address-title {
  margin-bottom: 0;
}
.block-custom-title {
  
  @include LatoBlack;
  font-size: 15px;
  text-transform: none;
  margin-bottom: 0;
}
.custom-block-wrapper {
  margin-top: 25px;
}
h4.page__contact-form__note.form-success {
  font-size: 18px;
  @include LatoRegular;
}
input.c-btn {
  background-color: #E65525;
}
.contact_us_top {
  background-size: cover;
}
body.template-page .newsletter.newsletter--light {
  display: none;
}
div.aside p {
  line-height: 25px;
}
.error_page_top {
  height: 650px;
  background-size: cover;
}
.content-wrapper {
  display: flex;
  align-items: center;
  height: 650px;
}
.content {
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin: 0 auto;
  width: 85%;
  height: 100%;
}
h1.error-page-title {
  font-size: 220px;
  line-height: 1;
  margin: 0;
  padding: 0;
  color: #fff;
  text-align: left;
  @include LatoBlack;
}
h2.after-title-text {
  font-size: 42px;
  color: #fff;
  text-align: left;
  @include LatoRegular;
  text-transform: initial;
}
a.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 225px;
  height: 47px;
  background-color: #E65525;
  font-size: 15px;
  color: #fff;
}
body.template-404 section.section.section--footer {
  display: none;
}
.privacy-background-img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-size: cover;
  height: 285px;
}
.privacy-content-wrapper {
  max-width: 100%;
  display: flex;
  flex-direction: column;
  width: 1080px;
  margin: 0 auto;
}
.privacy-title {
  font-size: 50px;
  color: #fff;
  @include LatoBlack;
  text-transform: initial;
}
.privacy-main-content {
  display: flex;
  justify-content: space-between;
  margin-top: 65px;
}
.privacy-main-aside {
  display: flex;
  flex-direction: column;
  width: 15%;
}
.privacy-main {
  width: 80%;
}
.privacy-first-link, .privacy-second-link {
  font-size: 15px;
  text-align: left;
}
span.privacy-second-link {
  @include LatoBlack;
  position: relative;
  width: max-content;
  max-width: 100%;
}
span.privacy-second-link:after {
  content: '';
  position: absolute;
  height: 2px;
  background-color: #ffd161;
  left: 0px;
  right: 0px;
  bottom: 0;
}
span.privacy-first-link {
  @include LatoBlack;
  position: relative;
  width: max-content;
  max-width: 100%;
}
span.privacy-first-link:after {
  content: '';
  position: absolute;
  height: 2px;
  background-color: #ffd161;
  left: 0px;
  right: 0px;
  bottom: 0;
}
h2.initial {
  text-transform: initial;
  font-size: 18px;
  @include LatoBlack;
  margin-top: 40px;
  margin-bottom: 25px;
  line-height: 22px;
}
h2.initial.first {
  margin-top: 0;
}
p.privacy-p {
  line-height: 30px;
  font-size: 15px;
  @include LatoRegular;
}
ul.li-color-marker {
  margin-left: 0;
  li {
    list-style-type: none;
    position: relative;
    padding-left: 25px;
    &:before {
      color: #E65525;
      content: "";
      display: block;
      position: absolute;
      left: 0;
      width: 8px;
      height: 8px;
      background-color: #e65525;
      border-radius: 50%;
      top: 12px;
    }
  }
}
.career-background-img {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-size: cover;
    height: 285px;

  .career-content-wrapper {
      max-width: 100%;
      display: flex;
      flex-direction: column;
      width: 1080px;
      margin: 0 auto;

    .career-title {
        font-size: 50px;
        color: #fff;
        @include LatoBlack;
        text-transform: initial;
    }
    h1.career-title {
      max-width: 40%;
    }
  }
}
.career-main {
    .career-content-wrapper {
      max-width: 100%;
      display: flex;
      flex-direction: column;
      width: 1080px;
      margin: 0 auto;
      margin-top: 55px;
      margin-bottom: 55px;

      p.career-title-text {
        font-size: 15px;
        line-height: 30px;
        text-align: center;

        a {
          text-decoration: underline;
        }
      }
      .table {
        display: flex;
        margin: 0 auto;
        margin-top: 65px;
        width: 95%;

        th {
          font-size: 16px;
          @include LatoBlack;
          text-transform: initial;
          line-height: 25px;
          background-color: #fff;
          border-bottom: 1px solid #FAFAFA;
        }

        tbody {
          tr {
            height: 61px;
            @include LatoRegular;

            &:nth-child(even) td {
              background-color: #fff;
            }
            &:nth-child(odd) td {
              background-color: #FAFAFA;
            }
            &:hover td {
              @include LatoBlack;
              border-bottom: 2px solid #FFC331;
              min-height: 61px;
            }
            td {
              width: 50%;
            }
          }
        }
      }
    }
    
}
.career-join {
  .container {
    text-align: center;
    background-color: #F2EFEC;

    .career-join-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;

      .join-content-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 auto;
        margin: 100px 0;
        width: 70%;

        h2.join-title {
          font-size: 32px;
          line-height: 32px;
          @include LatoBlack;
          text-transform: initial;
          margin-bottom: 20px;
          
        }
        p.join-text {
          font-size: 15px;
          line-height: 25px;
          max-width: 85%;
        }
      }
    }
  }
}
.button-wrapper {
  display: flex;
  align-items: center;
  margin: 13px 0;

  .submit-button, .download-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 255px;
    height: 47px;
    font-size: 15px;
    @include LatoBlack;
  }
  .submit-button {
    background-color: #E65525;
    color: #fff;
    margin: 7px;

    &:hover {
      cursor: pointer;
      background-color: transparent;
      border: 1px solid #E65525;
      color: #E65525;
    }
  }
  .download-button {
    border: 1px solid #E65525;
    color: #E65525;
    margin: 7px;

    &:hover {
      background-color: #E65525;
      color: #fff;
      border: none;
    }
  }
}
.career-form-wrapper {
  margin: 70px 0;
  text-align: center;

  .career-form {
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    width: 60%;
}
.career-form-title {
  text-transform: initial;
  margin-bottom: 25px;
  @include LatoBlack;
}

.upload-wrapper {
  display: flex;
  text-align: left;

  a.choose-button {
    display: flex;
    align-items: center;
    background-color: #FFC331;
    color: #fff;
    font-size: 13px;
    @include LatoBlack;
    width: 173px;
    height: 47px;
    margin: 20px 0;
    padding-left: 20px;
    
    svg {
      margin-right: 10px;
    }
  }
  .upload-text {
    font-size: 13px;
    margin: 18px 0;
    padding: 0;
    margin-left: 15px;
    max-height: 47px;
  }
}
  .career-form-submit {
    font-size: 15px;
    @include LatoBlack;
    line-height: 18px;
    margin: 0;
    padding: 15px 0;
  }
  textarea.ContactFormMessage {
    margin-bottom: 0;
  }
}
.career-gallery {
  .gallery-wrapper {
    display: flex;

    .img-1, .img-2, .img-3, .img-4, .img-5 {
      width: 20%;
    }

    .img-1 img, .img-2 img, .img-3 img, .img-4 img, .img-5 img {
      width: 100%;
      height: 100%;
    }
  }
}

.section.section--account {
    display: flex;
    margin: 0;

    .container--tiny, .login-side-image {
      width: 50%;
      margin: 0;
      padding: 0;
    }
    .login-side-image img, .register-side-image img {
      width: 100%;
      height: 100%;
    }

    .container--tiny {
      display: flex;
    }
}
.customer-login-form, .create-account-form {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 70%;
  margin: 0 auto;
  
  h1.section__title-text {
    text-transform: none;
  }
  h1.section__title-text.h2::after {
    display: none;
  }
  .email-input, .password-input {
    margin-bottom: 16px;
  }
  .login-submit-button {
    width: 100%;
    font-size: 15px;
    line-height: 18px;
    @include LatoBlack;
    margin: 0 0 13px;
    height: 47px;

    &:hover {
      background: transparent;
      border: 1px solid #E65525;
      color: #E65525;
    }
  }
  .account__reset-link {
    text-align: left;
    margin-bottom: 44px;
    
    .forgot-password-link {
      font-size: 15px;
      line-height: 20px;
      text-decoration: underline;
    }
  }
  .not-member {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    font-size: 14px;
    line-height: 19px;
    margin-bottom: 20px;

    &::before {
      content: "";
      width: calc(50% - 72px);
      height: 1px;
      background-color: #D8D8D8;
      top: 5px;
      margin-right: 10px;
    }
    &::after {
      content: "";
      width: calc(50% - 72px);
      height: 1px;
      background-color: #D8D8D8;
      top: 5px;
      margin-left: 10px;
    }
  }
  .create-account {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    height: 47px;
    border: 1px solid #E65525;
    width: 100%;
    color: #E65525;
    @include LatoBlack;

    &:hover {
      color: #fff;
      background-color: #E65525;
      border: none;
    }
  }
  
}
