.content-wrapper {
  max-width: 100%;
  display: flex;
  flex-direction: column;
  width: 1080px;
  margin: 0 auto;
}
.top-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 285px;
}
h1.title, p.title-p {
  color: #fff;
  text-transform: none;
  margin: 0;
  padding: 0;
}
h1.title {
  font-size: 42px;
  text-align: left;
  font-family: Lato;
  font-weight: 900;
}
p.title-p {
  font-size: 18px;
  text-align: left;
  font-family: Lato;
  font-weight: 400;
}
.main-content {
  display: flex;
  max-width: 100%;
  justify-content: space-between;
}
.form {
  display: flex;
  width: 60%;
}
.aside {
  display: flex;
  flex-direction: column;
  width: 30%;
  word-wrap: break-word;
}
.form, .aside {
  margin: 70px 0;
}
.form {
  display: flex;
  flex-direction: column;
}
.form-title, .aside-title, .aside-address-title {
  font-family: Lato;
  font-weight: 900;
  font-size: 22px;
  text-transform: none;
}
.aside-address-title {
  margin-bottom: 0;
}
.block-custom-title {
  font-family: Lato;
  font-weight: 900;
  font-size: 15px;
  text-transform: none;
  margin-bottom: 0;
}
.custom-block-wrapper {
  margin-top: 25px;
}
h4.page__contact-form__note.form-success {
  font-size: 18px;
  font-family: Lato;
  font-weight: 400;
}
input.c-btn {
  background-color: #E65525;
}
@media screen and (max-width: 1199px){
  .contact_us_top {
    background-size: cover;
  }
}
@media screen and (max-width: 1024px){
  .contact_us_top {
    background-size: cover;
  }
}
@media screen and (max-width: 991px){
  .contact_us_top {
    background-size: cover;
  }
}
@media screen and (max-width: 767px){
  h1.title, p.title-p {
    margin-left: 50px;
  }
  .main-content {
    flex-direction: column;
  }
  .form, .aside {
    width: 80%;
    margin: 0 auto;
  }
  .form-title {
    margin-top: 30px;
  }
}
@media screen and (max-width: 575px){
  .form, .aside {
    width: 95%;
  }
  .aside-title {
    margin-top: 35px;
  }
  .aside-address-title {
    margin-top: 30px;
  }
  .aside-title {
    margin-bottom: 0;
  }
  .main-content {
    margin-bottom: 20px;
  }
}
@media screen and (max-width: 479px){
  h1.title, p.title-p {
    margin-left: 20px;
  }
}
@media screen and (max-width: 425px){
  h1.title, p.title-p {
    margin-left: 10px;
  }
}
@media screen and (max-width: 375px){
  .form, .aside {
    width: 100%;
  }
}
@media screen and (max-width: 320px){
	.form, .aside {
    width: 100%;
  }
}