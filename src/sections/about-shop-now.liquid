<section class="contact">
	<div class="container">
		<div class="shop-now-info">
			<h1>{{section.settings.header_contact}}</h1>
			<p>{{section.settings.text_contact}}</p>
		</div>
		<div class="shop-now-link">
			<button class="btn-shop">
			<a href="{{ section.settings.shop_now }}"></a>
			<h2>{{section.settings.info_value_one}}
			</h2>
		</button>
		</div>
	</div>
</section>



{% schema %}
{
  "name": "Contact",
  "settings": [
	    {
		   "type": "text",
		   "id": "header_contact",
		   "label": "Header contact"
		},
	    {
		   "type": "text",
		   "id": "text_contact",
		   "label": "Text contact"
		},
		{
			"type": "url",
			"id": "shop_now",
			"label": "Info value"
		},
				{
		   "type": "text",
		   "id": "info_value_one",
		   "label": "Info value"
		}
  	]
}
{% endschema %}