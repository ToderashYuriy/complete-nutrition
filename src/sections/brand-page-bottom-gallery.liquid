<section class="brand-page-bottom-gallery">
    <div class="brand-bottom-gallery">
      <div class="brand-gallery">
        <div class="gallery-wrapper">

          {% for block in section.blocks %}

            <div class="gallery-block">
                <img src="{{ block.settings.gallery_image | img_url: '' }}">
            </div>

          {% endfor %}
        </div>
      </div>
    </div>
</section>

{% schema %}
    {
      "name": "Bottom Gallery",
      "max_blocks": 6,
      "settings": [

      ],
      "blocks": [
        {
          "type": "text",
          "name": "Bottom Gallery Images",
          "settings": [
            {
              "type": "image_picker",
              "id": "gallery_image",
              "label": "Gallery Image"
            }
          ]
        }
      ]
    }
{% endschema %}