<section class="proposition">
  <div class="full_width_container">
    <div class="flex_direction">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="block_content">
            <div class="image_block_inner">
              <img src="{{ block.settings.logo | img_url: '' }}" alt="">
            </div>
            <div class="content_block_inner">
              {% if block.settings.title != blank %}
                <h5>{{ block.settings.title }}</h5>
              {% endif %}
              {% if block.settings.content != blank %}
                <div class="content_text">
                  {{ block.settings.content }}
                </div>
              {% endif %}
              {% if block.settings.btn_url != blank or block.settings.btn_text != blank %}
                <a href="{{ block.settings.btn_url }}" class="btn_shop_now">{{ block.settings.btn_text }}</a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>






{% schema %}
{
    "name": "Proposition Section",
    "settings": [
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Proposition",
            "settings": [
                {
                  "type": "image_picker",
                  "id": "logo",
                  "label": "Image"
                },
                {
                   "type": "text",
                   "id": "title",
                   "label": "Title"
                },
                {
                   "type": "html",
                   "id": "content",
                   "label": "Content Text"
                },
                {
                   "type": "text",
                   "id": "btn_text",
                   "label": "Button Text"
                },
                {
                   "type": "text",
                   "id": "btn_url",
                   "label": "Button url"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Proposition Section",
            "category": "Image",
            "settings": {
            }
        }
    ]
}
{% endschema %}