<section class="privacy-wrapper">
  <div class="container">
    <div class="privacy-content-wrapper">
      <div class="privacy-main-content">
        <div class="privacy-main-aside">
          <a href="{{ section.settings.side_link_first }}" class="privacy-first-link"> {{ section.settings.side_title_first }} </a>
          <span class="privacy-second-link"> {{ section.settings.side_title_second }} </span>
        </div>
        <div class="privacy-main">
          {{page.content}}
        </div>
      </div>
      
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Privacy Side",
    "settings": [
      {
        "type": "text",
        "id": "side_title_first",
        "default": "Term of Use",
        "label": "Term of Use"
      },
      {
        "type": "url",
        "id": "side_link_first",
        "label": "Term of Use Link"
      },
      {
        "type": "text",
        "id": "side_title_second",
        "default": "Privacy Policy",
        "label": "Privacy Policy"
      },
      {
        "id": "side_link_second",
        "type": "url",
        "label": "Privacy Policy Link"
      }
    ]
  }
{% endschema %}